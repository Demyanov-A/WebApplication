@model IEnumerable<WebApplication.Models.Employee>

<div class="container">
    <h3>Список сотрудников</h3>
    
    <a class="btn btn-default" asp-action="Create">Создать</a>

    @if (Model.Any())
    {
        <table class="table">
            <thead>
            <tr>
                <th></th>
                <th>Id</th>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Возраст</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var employee in Model)
            {
                <tr>
                    <td>
                        <a asp-controller="Employees" asp-action="EmployeeInfo" asp-route-id="@employee.Id">
                            <i class="fa fa-info"></i>
                        </a>
                        <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id">
                            <i class="fa fa-edit"></i>
                        </a>
                    </td>
                    <td>@employee.Id</td>
                    <td>@employee.LastName</td>
                    <td>@employee.FirstName</td>
                    <td>@employee.Patronymic</td>
                    <td>@employee.Age</td>
                    <td>
                        <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id">
                            <i class="fa fa-trash-o"></i>
                        </a>
                        <form asp-action="DeleteConfirmed" asp-route-id="@employee.Id">
                            <input type="submit" value="DEL" class="btn btn-sm btn-danger"/>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>Сотрудников нет...</p>
    }
    <hr/>

    <a asp-controller="Home" asp-action="Index">Главная</a>
</div>